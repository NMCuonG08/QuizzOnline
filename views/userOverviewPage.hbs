      <!-- Statistics Tab -->
      <div class="tab-pane fade" id="statistics" role="tabpanel" aria-labelledby="statistics-tab">
        <h4 class="mb-3">Thống kê chi tiết</h4>
        
        <div class="row mb-4">
          <div class="col-md-6 mb-4">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title mb-3">Phân bố theo loại quiz</h5>
                <div class="d-flex align-items-center justify-content-center" style="height: 260px;">
                  <div class="text-center text-secondary">
                    <i class="fas fa-chart-pie fa-3x mb-3"></i>
                    <p class="mb-1">Biểu đồ phân bố theo loại quiz sẽ hiển thị ở đây</p>
                    <small>(Toán học: 45%, Khoa học: 30%, Văn học: 15%, Khác: 10%)</small>
