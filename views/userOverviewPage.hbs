<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz Online - Profile</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/profile.css" />
</head>
<body class="">

  <main class="container py-4">
    <!-- Profile Header - Modern Design -->
    <div class="card border-0 shadow-sm mb-4 overflow-hidden">
      <div class="card-body p-4">
        <div class="row align-items-center">
          <div class="col-md-8 d-flex align-items-center">
            <!-- Enhanced Avatar Section -->
            <div class="position-relative me-4">
              <img src="{{#if this.avatar}}{{this.avatar}}{{else}}https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80{{/if}}" 
                   alt="User profile" 
                   class="rounded-circle profile-image shadow-sm" 
                   id="profileAvatar"
                   style="width: 80px; height: 80px; object-fit: cover; cursor: pointer; transition: all 0.3s ease;"
                   data-bs-toggle="modal" 
                   data-bs-target="#avatarUploadModal">
              <!-- Improved overlay effect -->
              <div class="avatar-overlay position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center rounded-circle bg-dark bg-opacity-50 opacity-0" style="transition: opacity 0.3s ease;">
                <i class="fas fa-camera text-white fs-5"></i>
              </div>
            </div>
            <!-- Enhanced User Info -->
            <div>
              <h2 class="h4 mb-1 fw-bold">{{this.user.username}}</h2>
              <p class="text-secondary mb-2"><i class="fas fa-envelope-open me-2 opacity-50"></i>{{this.account.email}}</p>
              <div class="d-flex align-items-center">
                <span class="badge bg-primary bg-gradient me-2 py-2 px-3"><i class="fas fa-star-half-alt me-1"></i> Level 7</span>
              </div>
            </div>
          </div>
          <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <a class="btn btn-primary btn-lg rounded-pill shadow-sm hover-lift" href="/user/profile">
              <i class="fas fa-pencil-alt me-2"></i>
              Chỉnh sửa hồ sơ
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Cards - Modern Design -->
    <div class="row mb-4 g-3">
      <!-- Quiz Completed Card -->
      <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 hover-lift" style="transition: transform 0.2s;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center">
              <div class="stat-icon rounded-4 bg-primary bg-gradient text-white me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                <i class="fas fa-check-square"></i>
              </div>
              <div>
                <h6 class="card-subtitle mb-1 text-secondary">Quiz hoàn thành</h6>
                <h3 class="card-title mb-0 fw-bold">47</h3>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Average Score Card -->
      <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 hover-lift" style="transition: transform 0.2s;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center">
              <div class="stat-icon rounded-4 bg-success bg-gradient text-white me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                <i class="fas fa-chart-bar"></i>
              </div>
              <div>
                <h6 class="card-subtitle mb-1 text-secondary">Điểm trung bình</h6>
                <h3 class="card-title mb-0 fw-bold">84.5%</h3>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Rank Card -->
      <div class="col-md-6 col-lg-3 mb-3 mb-lg-0">
        <div class="card h-100">
          <div class="card-body">
            <div class="d-flex">
              <div class="stat-icon bg-purple text-white me-3" style="background-color: #8b5cf6;">
                <i class="fas fa-arrow-trend-up"></i>
              </div>
              <div>
                <h6 class="card-subtitle mb-1 text-secondary">Thứ hạng hiện tại</h6>
                <h3 class="card-title mb-0 fw-bold">87 / 1208</h3>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Achievements Card -->
      <div class="col-md-6 col-lg-3">
        <div class="card h-100">
          <div class="card-body">
            <div class="d-flex">
              <div class="stat-icon bg-danger text-white me-3">
                <i class="fas fa-gift"></i>
              </div>
              <div>
                <h6 class="card-subtitle mb-1 text-secondary">Thành tựu đạt được</h6>
                <h3 class="card-title mb-0 fw-bold">12 / 25</h3>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Tab Navigation -->
    <ul class="nav nav-pills nav-fill shadow-sm rounded-4 p-2 mb-4" id="profileTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active px-3 py-3 rounded-3" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button" role="tab">
          <i class="fas fa-history me-2"></i>Lịch sử Quiz
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link px-3 py-3 rounded-3" id="achievements-tab" data-bs-toggle="tab" data-bs-target="#achievements" type="button" role="tab">
          <i class="fas fa-trophy me-2"></i>Thành tựu
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link px-3 py-3 rounded-3" id="leaderboard-tab" data-bs-toggle="tab" data-bs-target="#leaderboard" type="button" role="tab">
          <i class="fas fa-ranking-star me-2"></i>Bảng xếp hạng
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link px-3 py-3 rounded-3" id="statistics-tab" data-bs-toggle="tab" data-bs-target="#statistics" type="button" role="tab">
          <i class="fas fa-chart-line me-2"></i>Thống kê
        </button>
      </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="profileTabContent">
      <!-- Quiz History Tab -->
      <div class="tab-pane fade show active" id="history" role="tabpanel">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="mb-0 fw-bold"><i class="fas fa-list-alt me-2 text-primary"></i>Lịch sử Quiz gần đây</h4>
          
          {{#if pagination.totalPages}}
            <nav aria-label="Quiz history pagination" class="d-none d-md-block">
              <ul class="pagination pagination-sm mb-0">
                {{#if (gt pagination.page 1)}}
                  <li class="page-item">
                    <a class="page-link rounded-pill-start shadow-sm border-0 me-1" href="/user/overview?page={{subtract pagination.page 1}}" aria-label="Previous">
                      <i class="fas fa-chevron-left small"></i>
                    </a>
                  </li>
                {{else}}
                  <li class="page-item disabled">
                    <span class="page-link rounded-pill-start shadow-sm border-0 me-1">
                      <i class="fas fa-chevron-left small"></i>
                    </span>
                  </li>
                {{/if}}
                
                {{#each_page 1 pagination.totalPages pagination.page}}
                  <li class="page-item {{#if this.active}}active{{/if}}">
                    <a class="page-link shadow-sm border-0 mx-1 {{#if this.active}}bg-primary text-white{{else}}text-secondary{{/if}}" 
                       href="/user/overview?page={{this.number}}"
                       style="width: 30px; height: 30px; text-align: center; padding: 6px 0; border-radius: 50%;">
                      {{this.number}}
                    </a>
                  </li>
                {{/each_page}}
                
                {{#if (lt pagination.page pagination.totalPages)}}
                  <li class="page-item">
                    <a class="page-link rounded-pill-end shadow-sm border-0 ms-1" href="/user/overview?page={{add pagination.page 1}}" aria-label="Next">
                      <i class="fas fa-chevron-right small"></i>
                    </a>
                  </li>
                {{else}}
                  <li class="page-item disabled">
                    <span class="page-link rounded-pill-end shadow-sm border-0 ms-1">
                      <i class="fas fa-chevron-right small"></i>
                    </span>
                  </li>
                {{/if}}
              </ul>
            </nav>
          {{/if}}
        </div>
        
        <!-- Modern Quiz History Cards -->
        <div class="card border-0 shadow-sm overflow-hidden">
          <ul class="list-group list-group-flush">
            {{#if quizHistory.length}}
              {{#each quizHistory}}
                <li class="list-group-item py-3 px-4 quiz-item" style="transition: all 0.2s ease;">
                  <div class="d-flex justify-content-between align-items-center flex-wrap flex-md-nowrap">
                    <div class="d-flex align-items-center">
                      <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-3 flex-shrink-0" style="width: 56px; height: 56px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-file-alt fa-lg"></i>
                      </div>
                      <div>
                        <h5 class="mb-1 h6 text-primary fw-bold">{{this.quiz.title}}</h5>
                        <div class="d-flex align-items-center flex-wrap">
                          <span class="badge  text-secondary border me-2 px-3 py-2">
                            <i class="fas fa-folder me-1"></i>{{this.quiz.category_name}}
                          </span>
                          <span class="badge {{#if (eq this.status 'COMPLETED')}}bg-success{{else}}bg-warning{{/if}} bg-opacity-10 text-{{#if (eq this.status 'COMPLETED')}}success{{else}}warning{{/if}} px-3 py-2">
                            <i class="fas {{#if (eq this.status 'COMPLETED')}}fa-check-circle{{else}}fa-clock{{/if}} me-1"></i>{{this.status}}
                          </span>
                        </div>
                      </div>
                    </div>
                    <div class="d-flex align-items-center mt-2 mt-md-0">
                      <div class="me-4 d-none d-md-block text-end">
                        <p class="mb-0 fw-medium">
                          <span class="text-success fw-bold">{{this.correctCount}}</span>/<span class="text-secondary">{{this.totalCount}}</span> 
                          <span class="text-secondary small">câu đúng</span>
                        </p>
                        <small class="text-secondary d-flex align-items-center justify-content-end"><i class="far fa-calendar-alt me-1"></i> {{this.formattedDate}}</small>
                      </div>
                      {{#if (eq this.status 'COMPLETED')}}
                        <a href="/quiz/check-result/{{this.id}}" class="btn btn-sm btn-primary rounded-pill px-3">
                          <span class="d-none d-sm-inline">Xem chi tiết</span>
                          <i class="fas fa-chevron-right ms-1"></i>
                        </a>
                        {{else if (eq this.status 'IN_PROGRESS')}}
                          <a href="/quiz/do-test/{{this.quiz.id}}" class="btn btn-sm btn-warning rounded-pill px-3">
                          <span class="d-none d-sm-inline">Tiếp tục</span>
                          <i class="fas fa-chevron-right ms-1"></i>
                          </a>
                      {{/if}}
                    </div>
                  </div>
                </li>
              {{/each}}
            {{else}}
              <li class="list-group-item py-5 text-center">
                <div class="text-secondary py-4">
                  <i class="fas fa-info-circle fa-3x mb-3 text-primary opacity-50"></i>
                  <p class="mb-3 h5 fw-normal">Bạn chưa hoàn thành quiz nào</p>
                  <a href="/quiz/all-quiz-by-category" class="btn btn-primary rounded-pill px-4 py-2">
                    <i class="fas fa-search me-2"></i>Khám phá quiz
                  </a>
                </div>
              </li>
            {{/if}}
          </ul>
        </div>
        
        {{#if quizHistory.length}}
          <nav aria-label="Quiz history pagination" class="mt-4">
            <ul class="pagination justify-content-center flex-wrap">
              {{#if (gt pagination.page 1)}}
                <li class="page-item">
                  <a class="page-link shadow-sm border-0 rounded-pill px-3 py-2 me-2 d-flex align-items-center" 
                     href="/user/overview?page={{subtract pagination.page 1}}">
                    <i class="fas fa-chevron-left me-1"></i>
                    <span class="d-none d-sm-inline">Trang trước</span>
                  </a>
                </li>
              {{else}}
                <li class="page-item disabled">
                  <span class="page-link shadow-sm border-0 rounded-pill px-3 py-2 me-2 d-flex align-items-center">
                    <i class="fas fa-chevron-left me-1"></i>
                    <span class="d-none d-sm-inline">Trang trước</span>
                  </span>
                </li>
              {{/if}}
              
              <li class="page-item d-none d-md-flex align-items-center mx-2">
                <span class="text-secondary small">
                  Trang {{pagination.page}} / {{pagination.totalPages}}
                </span>
              </li>
              
              <div class="d-flex d-md-none">
                {{#each_page 1 pagination.totalPages pagination.page}}
                  <li class="page-item {{#if this.active}}active{{/if}} mx-1">
                    <a class="page-link shadow-sm border-0 {{#if this.active}}bg-primary text-white{{else}}text-secondary{{/if}}" 
                       href="/user/overview?page={{this.number}}"
                       style="width: 40px; height: 40px; text-align: center; padding: 10px 0; border-radius: 50%;">
                      {{this.number}}
                    </a>
                  </li>
                {{/each_page}}
              </div>
              
              {{#if (lt pagination.page pagination.totalPages)}}
                <li class="page-item">
                  <a class="page-link shadow-sm border-0 rounded-pill px-3 py-2 ms-2 d-flex align-items-center" 
                     href="/user/overview?page={{add pagination.page 1}}">
                    <span class="d-none d-sm-inline">Trang sau</span>
                    <i class="fas fa-chevron-right ms-1"></i>
                  </a>
                </li>
              {{else}}
                <li class="page-item disabled">
                  <span class="page-link shadow-sm border-0 rounded-pill px-3 py-2 ms-2 d-flex align-items-center">
                    <span class="d-none d-sm-inline">Trang sau</span>
                    <i class="fas fa-chevron-right ms-1"></i>
                  </span>
                </li>
              {{/if}}
            </ul>
          </nav>
        {{/if}}
      </div>

      <!-- Achievements Tab -->
      <div class="tab-pane fade" id="achievements" role="tabpanel" aria-labelledby="achievements-tab">
        <h4 class="mb-3">Thành tựu đã đạt được</h4>
        <div class="row g-3 mb-4">
          <!-- Achievement Item 1 -->
          <div class="col-md-6 col-lg-4">
            <div class="card h-100">
              <div class="card-body d-flex align-items-center">
                <div class="achievement-icon bg-purple me-3" style="background-color: #8b5cf6;">
                  <i class="fas fa-star"></i>
                </div>
                <div>
                  <h5 class="card-title h6 mb-1">Người chinh phục toán học</h5>
                  <p class="card-text small mb-0 text-secondary">Hoàn thành 10 quiz toán học với điểm số trên 80%</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Achievement Item 2 -->
          <div class="col-md-6 col-lg-4">
            <div class="card h-100">
              <div class="card-body d-flex align-items-center">
                <div class="achievement-icon bg-success me-3">
                  <i class="fas fa-bolt"></i>
                </div>
                <div>
                  <h5 class="card-title h6 mb-1">Tốc độ ánh sáng</h5>
                  <p class="card-text small mb-0 text-secondary">Hoàn thành 5 quiz trong thời gian dưới 3 phút mỗi quiz</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Achievement Item 3 -->
          <div class="col-md-6 col-lg-4">
            <div class="card h-100">
              <div class="card-body d-flex align-items-center">
                <div class="achievement-icon bg-primary me-3">
                  <i class="fas fa-shield-alt"></i>
                </div>
                <div>
                  <h5 class="card-title h6 mb-1">Hoàn hảo</h5>
                  <p class="card-text small mb-0 text-secondary">Hoàn thành 3 quiz liên tiếp với điểm số 100%</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Achievement Item 4 -->
          <div class="col-md-6 col-lg-4">
            <div class="card h-100">
              <div class="card-body d-flex align-items-center">
                <div class="achievement-icon bg-danger me-3">
                  <i class="fas fa-clock"></i>
                </div>
                <div>
                  <h5 class="card-title h6 mb-1">Người kiên trì</h5>
                  <p class="card-text small mb-0 text-secondary">Hoàn thành ít nhất 1 quiz mỗi ngày trong 7 ngày liên tiếp</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <h4 class="mb-3">Thành tựu sắp đạt được</h4>
        <div class="row">
          <!-- Upcoming Achievement Item -->
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 opacity-75">
              <div class="card-body d-flex align-items-center">
                <div class="achievement-icon bg-secondary me-3">
                  <i class="fas fa-database"></i>
                </div>
                <div>
                  <h5 class="card-title h6 mb-1">Quiz Master</h5>
                  <p class="card-text small mb-0 text-secondary">Hoàn thành 100 quiz với điểm số trung bình trên 80%</p>
                  <div class="progress mt-2" style="height: 6px;">
                    <div class="progress-bar bg-secondary" role="progressbar" style="width: 45%;" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                  <p class="small text-secondary mt-1 mb-0">45/100 quiz đã hoàn thành</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Leaderboard Tab -->
      <div class="tab-pane fade" id="leaderboard" role="tabpanel" aria-labelledby="leaderboard-tab">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="mb-0">Bảng xếp hạng</h4>
          <select class="form-select form-select-sm" style="width: auto;">
            <option>Tuần này</option>
            <option>Tháng này</option>
            <option>Quý này</option>
            <option>Tất cả thời gian</option>
          </select>
        </div>
        
        <div class="card">
          <ul class="list-group list-group-flush">
            <!-- Top 1 User -->
            <li class="list-group-item py-3" style="background-color: rgba(255, 193, 7, 0.05);">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="leaderboard-rank top-1 me-3">1</div>
                  <img class="rounded-circle me-3" width="40" height="40" src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2.25&w=256&h=256&q=80" alt="Trần Quốc Bảo">
                  <div>
                    <h5 class="mb-0 h6">Trần Quốc Bảo</h5>
                    <small class="text-secondary">Hoàn thành: 248 quiz</small>
                  </div>
                </div>
                <div class="d-flex align-items-center text-warning fw-bold">
                  <i class="fas fa-star me-1"></i>
                  9852 điểm
                </div>
              </div>
            </li>
            
            <!-- Top 2 User -->
            <li class="list-group-item py-3" style="background-color: rgba(108, 117, 125, 0.05);">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="leaderboard-rank top-2 me-3">2</div>
                  <img class="rounded-circle me-3" width="40" height="40" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2.25&w=256&h=256&q=80" alt="Nguyễn Thị Mai">
                  <div>
                    <h5 class="mb-0 h6">Nguyễn Thị Mai</h5>
                    <small class="text-secondary">Hoàn thành: 232 quiz</small>
                  </div>
                </div>
                <div class="d-flex align-items-center text-secondary fw-bold">
                  <i class="fas fa-star me-1"></i>
                  9603 điểm
                </div>
              </div>
            </li>
            
            <!-- Top 3 User -->
            <li class="list-group-item py-3" style="background-color: rgba(205, 127, 50, 0.05);">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="leaderboard-rank top-3 me-3">3</div>
                  <img class="rounded-circle me-3" width="40" height="40" src="https://images.unsplash.com/photo-1519244703995-f4e0f30006d5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2.25&w=256&h=256&q=80" alt="Lê Văn Hùng">
                  <div>
                    <h5 class="mb-0 h6">Lê Văn Hùng</h5>
                    <small class="text-secondary">Hoàn thành: 215 quiz</small>
                  </div>
                </div>
                <div class="d-flex align-items-center fw-bold" style="color: #cd7f32;">
                  <i class="fas fa-star me-1"></i>
                  9247 điểm
                </div>
              </div>
            </li>

            <!-- Current User (87) -->
            <li class="list-group-item py-3 current-user">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="leaderboard-rank text-primary me-3">87</div>
                  <img class="rounded-circle me-3 border border-2 border-primary" width="40" height="40" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="Nguyễn Văn A">
                  <div>
                    <h5 class="mb-0 h6">Nguyễn Văn A <span class="text-primary">(Bạn)</span></h5>
                    <small class="text-secondary">Hoàn thành: 47 quiz</small>
                  </div>
                </div>
                <div class="d-flex align-items-center text-primary fw-bold">
                  <i class="fas fa-star me-1"></i>
                  3486 điểm
                </div>
              </div>
            </li>

            <!-- User 88 -->
