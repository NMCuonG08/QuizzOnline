<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz Online - Profile</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/profile.css" />
</head>
<body class="bg-light">

  <main class="container py-4">
    <!-- Profile Header -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-md-8 d-flex align-items-center">
            <!-- Make avatar clickable to open modal -->
            <div class="position-relative">
              <img src="{{#if this.user.avatar}}{{this.user.avatar}}{{else}}https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80{{/if}}" 
                   alt="User profile" 
                   class="rounded-circle profile-image me-3" 
                   id="profileAvatar"
                   style="cursor: pointer;"
                   data-bs-toggle="modal" 
                   data-bs-target="#avatarUploadModal">
              <!-- Add overlay on hover -->
              <div class="avatar-overlay position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center rounded-circle">
                <i class="fas fa-camera text-white"></i>
              </div>
            </div>
            <div>
              <h2 class="h4 mb-1">{{this.user.username}}</h2>
              <p class="text-secondary mb-1">{{this.account.email}}</p>
              <div>
                <span class="badge bg-primary me-2">Level 7</span>
                <span class="badge bg-light text-dark">Quiz Master</span>
              </div>
            </div>
          </div>
          <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <a class="btn btn-outline-secondary" href="/user/profile">
              <i class="fas fa-pencil-alt me-1"></i>
              Chỉnh sửa hồ sơ
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
      <!-- Quiz Completed Card -->
      <div class="col-md-6 col-lg-3 mb-3 mb-lg-0">
        <div class="card h-100">
          <div class="card-body">
            <div class="d-flex">
              <div class="stat-icon bg-primary text-white me-3">
                <i class="fas fa-check-square"></i>
              </div>
              <div>
                <h6 class="card-subtitle mb-1 text-secondary">Quiz hoàn thành</h6>
                <h3 class="card-title mb-0 fw-bold">47</h3>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Average Score Card -->
      <div class="col-md-6 col-lg-3 mb-3 mb-lg-0">
        <div class="card h-100">
          <div class="card-body">
            <div class="d-flex">
              <div class="stat-icon bg-success text-white me-3">
                <i class="fas fa-chart-bar"></i>
              </div>
              <div>
                <h6 class="card-subtitle mb-1 text-secondary">Điểm trung bình</h6>
                <h3 class="card-title mb-0 fw-bold">84.5%</h3>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Rank Card -->
      <div class="col-md-6 col-lg-3 mb-3 mb-lg-0">
        <div class="card h-100">
          <div class="card-body">
            <div class="d-flex">
              <div class="stat-icon bg-purple text-white me-3" style="background-color: #8b5cf6;">
                <i class="fas fa-arrow-trend-up"></i>
              </div>
              <div>
                <h6 class="card-subtitle mb-1 text-secondary">Thứ hạng hiện tại</h6>
                <h3 class="card-title mb-0 fw-bold">87 / 1208</h3>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Achievements Card -->
      <div class="col-md-6 col-lg-3">
        <div class="card h-100">
          <div class="card-body">
            <div class="d-flex">
              <div class="stat-icon bg-danger text-white me-3">
                <i class="fas fa-gift"></i>
              </div>
              <div>
                <h6 class="card-subtitle mb-1 text-secondary">Thành tựu đạt được</h6>
                <h3 class="card-title mb-0 fw-bold">12 / 25</h3>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Tab Navigation -->
    <ul class="nav nav-tabs mb-4" id="profileTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active px-3 py-3" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button" role="tab" aria-controls="history" aria-selected="true">
          Lịch sử Quiz
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link px-3 py-3" id="achievements-tab" data-bs-toggle="tab" data-bs-target="#achievements" type="button" role="tab" aria-controls="achievements" aria-selected="false">
          Thành tựu
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link px-3 py-3" id="leaderboard-tab" data-bs-toggle="tab" data-bs-target="#leaderboard" type="button" role="tab" aria-controls="leaderboard" aria-selected="false">
          Bảng xếp hạng
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link px-3 py-3" id="statistics-tab" data-bs-toggle="tab" data-bs-target="#statistics" type="button" role="tab" aria-controls="statistics" aria-selected="false">
          Thống kê
        </button>
      </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="profileTabContent">
      <!-- Quiz History Tab -->
      <div class="tab-pane fade show active" id="history" role="tabpanel" aria-labelledby="history-tab">
        <h4 class="mb-3">Lịch sử Quiz gần đây</h4>
        <div class="card">
          <ul class="list-group list-group-flush">
            <!-- Quiz History Item 1 -->
            <li class="list-group-item py-3">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3">
                    <i class="fas fa-file-alt"></i>
                  </div>
                  <div>
                    <h5 class="mb-1 h6 text-primary">Quiz Toán học cơ bản</h5>
                    <div class="d-flex align-items-center">
                      <small class="text-secondary me-2">Toán học</small>
                      <span class="badge bg-success bg-opacity-10 text-success">Trung bình</span>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-center">
                  <div class="me-4 d-none d-md-block text-end">
                    <p class="mb-0 small"><span class="fw-medium">8/10</span> câu đúng</p>
                    <small class="text-secondary">13/02/2023</small>
                  </div>
                  <a href="#" class="text-primary text-decoration-none">
                    Xem chi tiết
                    <i class="fas fa-chevron-right ms-1 small"></i>
                  </a>
                </div>
              </div>
            </li>
            
            <!-- Quiz History Item 2 -->
            <li class="list-group-item py-3">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="bg-info bg-opacity-10 text-info rounded-circle p-2 me-3">
                    <i class="fas fa-flask"></i>
                  </div>
                  <div>
                    <h5 class="mb-1 h6 text-primary">Quiz Khoa học thường thức</h5>
                    <div class="d-flex align-items-center">
                      <small class="text-secondary me-2">Khoa học</small>
                      <span class="badge bg-success bg-opacity-10 text-success">Dễ</span>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-center">
                  <div class="me-4 d-none d-md-block text-end">
                    <p class="mb-0 small"><span class="fw-medium">10/10</span> câu đúng</p>
                    <small class="text-secondary">10/02/2023</small>
                  </div>
                  <a href="#" class="text-primary text-decoration-none">
                    Xem chi tiết
                    <i class="fas fa-chevron-right ms-1 small"></i>
                  </a>
                </div>
              </div>
            </li>
            
            <!-- Quiz History Item 3 -->
            <li class="list-group-item py-3">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-2 me-3">
                    <i class="fas fa-book"></i>
                  </div>
                  <div>
                    <h5 class="mb-1 h6 text-primary">Quiz Văn học Việt Nam</h5>
                    <div class="d-flex align-items-center">
                      <small class="text-secondary me-2">Văn học</small>
                      <span class="badge bg-warning bg-opacity-10 text-warning">Khó</span>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-center">
                  <div class="me-4 d-none d-md-block text-end">
                    <p class="mb-0 small"><span class="fw-medium">7/10</span> câu đúng</p>
                    <small class="text-secondary">05/02/2023</small>
                  </div>
                  <a href="#" class="text-primary text-decoration-none">
                    Xem chi tiết
                    <i class="fas fa-chevron-right ms-1 small"></i>
                  </a>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <!-- Achievements Tab -->
      <div class="tab-pane fade" id="achievements" role="tabpanel" aria-labelledby="achievements-tab">
        <h4 class="mb-3">Thành tựu đã đạt được</h4>
        <div class="row g-3 mb-4">
          <!-- Achievement Item 1 -->
          <div class="col-md-6 col-lg-4">
            <div class="card h-100">
              <div class="card-body d-flex align-items-center">
                <div class="achievement-icon bg-purple me-3" style="background-color: #8b5cf6;">
                  <i class="fas fa-star"></i>
                </div>
                <div>
                  <h5 class="card-title h6 mb-1">Người chinh phục toán học</h5>
                  <p class="card-text small mb-0 text-secondary">Hoàn thành 10 quiz toán học với điểm số trên 80%</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Achievement Item 2 -->
          <div class="col-md-6 col-lg-4">
            <div class="card h-100">
              <div class="card-body d-flex align-items-center">
                <div class="achievement-icon bg-success me-3">
                  <i class="fas fa-bolt"></i>
                </div>
                <div>
                  <h5 class="card-title h6 mb-1">Tốc độ ánh sáng</h5>
                  <p class="card-text small mb-0 text-secondary">Hoàn thành 5 quiz trong thời gian dưới 3 phút mỗi quiz</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Achievement Item 3 -->
          <div class="col-md-6 col-lg-4">
            <div class="card h-100">
              <div class="card-body d-flex align-items-center">
                <div class="achievement-icon bg-primary me-3">
                  <i class="fas fa-shield-alt"></i>
                </div>
                <div>
                  <h5 class="card-title h6 mb-1">Hoàn hảo</h5>
                  <p class="card-text small mb-0 text-secondary">Hoàn thành 3 quiz liên tiếp với điểm số 100%</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Achievement Item 4 -->
          <div class="col-md-6 col-lg-4">
            <div class="card h-100">
              <div class="card-body d-flex align-items-center">
                <div class="achievement-icon bg-danger me-3">
                  <i class="fas fa-clock"></i>
                </div>
                <div>
                  <h5 class="card-title h6 mb-1">Người kiên trì</h5>
                  <p class="card-text small mb-0 text-secondary">Hoàn thành ít nhất 1 quiz mỗi ngày trong 7 ngày liên tiếp</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <h4 class="mb-3">Thành tựu sắp đạt được</h4>
        <div class="row">
          <!-- Upcoming Achievement Item -->
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 opacity-75">
              <div class="card-body d-flex align-items-center">
                <div class="achievement-icon bg-secondary me-3">
                  <i class="fas fa-database"></i>
                </div>
                <div>
                  <h5 class="card-title h6 mb-1">Quiz Master</h5>
                  <p class="card-text small mb-0 text-secondary">Hoàn thành 100 quiz với điểm số trung bình trên 80%</p>
                  <div class="progress mt-2" style="height: 6px;">
                    <div class="progress-bar bg-secondary" role="progressbar" style="width: 45%;" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                  <p class="small text-secondary mt-1 mb-0">45/100 quiz đã hoàn thành</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Leaderboard Tab -->
      <div class="tab-pane fade" id="leaderboard" role="tabpanel" aria-labelledby="leaderboard-tab">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="mb-0">Bảng xếp hạng</h4>
          <select class="form-select form-select-sm" style="width: auto;">
            <option>Tuần này</option>
            <option>Tháng này</option>
            <option>Quý này</option>
            <option>Tất cả thời gian</option>
          </select>
        </div>
        
        <div class="card">
          <ul class="list-group list-group-flush">
            <!-- Top 1 User -->
            <li class="list-group-item py-3" style="background-color: rgba(255, 193, 7, 0.05);">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="leaderboard-rank top-1 me-3">1</div>
                  <img class="rounded-circle me-3" width="40" height="40" src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2.25&w=256&h=256&q=80" alt="Trần Quốc Bảo">
                  <div>
                    <h5 class="mb-0 h6">Trần Quốc Bảo</h5>
                    <small class="text-secondary">Hoàn thành: 248 quiz</small>
                  </div>
                </div>
                <div class="d-flex align-items-center text-warning fw-bold">
                  <i class="fas fa-star me-1"></i>
                  9852 điểm
                </div>
              </div>
            </li>
            
            <!-- Top 2 User -->
            <li class="list-group-item py-3" style="background-color: rgba(108, 117, 125, 0.05);">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="leaderboard-rank top-2 me-3">2</div>
                  <img class="rounded-circle me-3" width="40" height="40" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2.25&w=256&h=256&q=80" alt="Nguyễn Thị Mai">
                  <div>
                    <h5 class="mb-0 h6">Nguyễn Thị Mai</h5>
                    <small class="text-secondary">Hoàn thành: 232 quiz</small>
