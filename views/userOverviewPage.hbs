  <script>
    // Enable Bootstrap tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl)
    })
    
    // Enhanced pagination interactions
    document.addEventListener('DOMContentLoaded', function() {
      // Add subtle hover animations to pagination buttons
      const pageLinks = document.querySelectorAll('.page-link');
      
      pageLinks.forEach(link => {
        if (!link.closest('.disabled')) {
          link.addEventListener('mouseenter', function() {
            this.style.boxShadow = '0 5px 15px rgba(0,0,0,0.1)';
          });
          
          link.addEventListener('mouseleave', function() {
            this.style.boxShadow = '';
          });
        }
      });
      
      // Animate page number on active page
      const activePageNumber = document.querySelector('.page-item.active .page-link');
      if (activePageNumber) {
        activePageNumber.style.transition = 'transform 0.3s';
        setTimeout(() => {
          activePageNumber.style.transform = 'translateY(-2px) scale(1.05)';
          setTimeout(() => {
            activePageNumber.style.transform = 'translateY(-2px) scale(1)';
          }, 300);
        }, 500);
      }
    });

    // Enhanced Avatar Upload Functionality with Cloudinary
    document.addEventListener('DOMContentLoaded', function() {
      // File input change event to preview selected image
      document.getElementById('avatarFile').addEventListener('change', function(event) {
        const file = event.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function(e) {
            document.getElementById('avatarPreview').src = e.target.result;
          }
          reader.readAsDataURL(file);
        }
      });

      // Avatar hover effect - keep existing code if any
      const profileAvatar = document.getElementById('profileAvatar');
      const avatarOverlay = document.querySelector('.avatar-overlay');
      
      if (profileAvatar && avatarOverlay) {
        profileAvatar.addEventListener('mouseenter', function() {
          avatarOverlay.style.opacity = '1';
        });
        
        profileAvatar.addEventListener('mouseleave', function() {
          avatarOverlay.style.opacity = '0';
        });
      }
      
      // Handle avatar form submission with Cloudinary upload
      document.getElementById('avatarUploadForm').addEventListener('submit', function(event) {
        event.preventDefault();
        
        const fileInput = document.getElementById('avatarFile');
        if (!fileInput.files || !fileInput.files[0]) {
          Swal.fire({
            icon: 'error',
            title: 'No image selected',
            text: 'Please select an image to upload',
          });
          return;
        }
        
        const formData = new FormData();
        formData.append('image', fileInput.files[0]);
        
        // Show loading indicator
        Swal.fire({
          title: 'Uploading image...',
          html: 'Please wait while we process your image',
          allowOutsideClick: false,
          didOpen: () => {
            Swal.showLoading();
          }
        });
        
        // Step 1: Upload to Cloudinary via media router
        fetch('/media/upload-image', {
          method: 'POST',
          body: formData
        })
        .then(response => {
          if (!response.ok) {
            throw new Error('Network response was not ok');
          }
          return response.json();
        })
        .then(cloudinaryData => {
         
          // Update loading message
          Swal.update({
            title: 'Updating profile...',
            html: 'Your image has been uploaded, updating your profile'
          });
          
          // Step 2: Update user profile with the Cloudinary URL
          return fetch('/user/update-avatar', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ avatar: cloudinaryData.imageUrl, public_id:cloudinaryData.publicId  })
          });
        })
        .then(response => {
          if (!response.ok) {
            throw new Error('Failed to update profile');
          }
          return response.json();
        })
        .then(data => {
          if (data.success) {
            // Close the modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('avatarUploadModal'));
            modal.hide();
            
            // Update the profile avatar on the page without reload
            document.querySelectorAll('.profile-image, #profileAvatar').forEach(img => {
              img.src = document.getElementById('avatarPreview').src;
            });
            
            // Show success message
            Swal.fire({
              icon: 'success',
              title: 'Profile Updated!',
              text: 'Your avatar has been successfully updated',
              timer: 2000,
              showConfirmButton: false
            });
          } else {
            throw new Error(data.message || 'Failed to update profile');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          Swal.fire({
            icon: 'error',
            title: 'Upload Failed',
            text: error.message || 'There was an error uploading your image'
          });
        });
      });
    });
  </script>
