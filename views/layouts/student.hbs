</head>
<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Mobile Toggle Button - Only visible on small screens -->
            <div class="mobile-toggle d-md-none">
                <button id="sidebar-toggle" class="btn">
                    <i class="fas fa-bars"></i>
                </button>
                <h3 class="quizizz-logo">QUIZZ</h3>
            </div>

            <!-- Sidebar -->
            <nav id="sidebar" class="col-auto sidebar">
                <div class="sidebar-top">
                    <div class="branding">
                        <h3 class="quizizz-logo">QUIZZ</h3>
                        <small>STUDENT</small>
                    </div>
                    <button class="btn create-btn"><span class="btn-icon">+</span> <span class="btn-text">Tạo mới</span></button>
                    <ul class="sidebar-menu">
                        <li><a href="#" class="menu-link"><i class="fas fa-home"></i> <span class="menu-text">Khám phá</span></a></li>
                        <li><a href="#" class="menu-link"><i class="fas fa-book"></i> <span class="menu-text">Thư viện</span></a></li>
                        <li><a href="#" class="menu-link"><i class="fas fa-chart-bar"></i> <span class="menu-text">Báo cáo</span></a></li>
                    </ul>
                </div>
                <div class="sidebar-bottom">
                    <div class="activity-count">
                        <small><span class="counter">0/20</span> hoạt động được tạo ra <i class="fas fa-info-circle"></i></small>
                    </div>
                    <button class="btn upgrade-btn"><i class="fas fa-bolt"></i> <span class="btn-text">Nâng cấp</span></button>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col main-content">
                <header class="main-header">
                    <div class="navbar-container">
                        <div class="left-menu">
                            <h3 class="quizizz-logo d-none d-md-block">QUIZZ</h3>
                            <nav class="main-nav">
                               
                            </nav>
                        </div>
                        <div class="right-menu">
                           
                            <a href="#" class="nav-link">Đăng nhập</a>
                            <a href="#" class="btn register-btn">Đăng ký</a>
                        </div>
                    </div>
                </header>
                <div class="content-area">
                    {{{body}}}
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Khai báo biến toàn cục cho scope hiện tại
            let choiceNameModal, viewMembersModal, changeRoomNameModal, inviteUserModal, playGameModal, addQuizModal;
            let members = []; // Khai báo members trước với giá trị mặc định
            let currentUsername = '{{username}}' || '';
            let roomId = '{{roomId}}'' || '';
            let choiceNameModalElement; 
            
            // Khởi tạo tất cả các modal
            function initializeModals() {
                choiceNameModalElement = document.getElementById('choiceNameModal');
                if (choiceNameModalElement) {
                    choiceNameModal = new bootstrap.Modal(choiceNameModalElement);
                }
                
                const viewMembersModalElement = document.getElementById('viewMembersModal');
                if (viewMembersModalElement) {
                    viewMembersModal = new bootstrap.Modal(viewMembersModalElement);
                }
                
                const changeRoomNameModalElement = document.getElementById('changeRoomNameModal');
                if (changeRoomNameModalElement) {
                    changeRoomNameModal = new bootstrap.Modal(changeRoomNameModalElement);
                }
                
                const inviteUserModalElement = document.getElementById('inviteUserModal');
                if (inviteUserModalElement) {
                    inviteUserModal = new bootstrap.Modal(inviteUserModalElement);
                }
                
                const playGameModalElement = document.getElementById('playGameModal');
                if (playGameModalElement) {
                    playGameModal = new bootstrap.Modal(playGameModalElement);
                }
                
                const addQuizModalElement = document.getElementById('addQuizModal');
                if (addQuizModalElement) {
                    addQuizModal = new bootstrap.Modal(addQuizModalElement);
                }
            }
            
            // Đăng ký sự kiện cho form username sau khi modal được khởi tạo
            function setupUsernameForm() {
                const usernameForm = document.getElementById('usernameForm');
                if (usernameForm) {
                    usernameForm.addEventListener('submit', function(e) {
                        e.preventDefault();
                        const usernameInput = document.getElementById('usernameInput');
                        if (usernameInput && usernameInput.value.trim()) {
                            currentUsername = usernameInput.value.trim();
                            console.log("Set username to:", currentUsername);
                            
                            if (choiceNameModal) {
                                choiceNameModal.hide();
                                
                                // Sử dụng sự kiện hidden.bs.modal trên đối tượng choiceNameModalElement
                                if (choiceNameModalElement) {
                                    choiceNameModalElement.addEventListener('hidden.bs.modal', function() {
                                        setupEventListeners(); // Thiết lập lại sự kiện sau khi modal đóng
                                    });
                                }
                            }
                        }
                    });
                }
            }
            
            // Khởi tạo người dùng (đảm bảo gọi sau khi modal được khởi tạo)
            function initializeUser() {
                const isUserLoggedIn = !!currentUsername;
                
                if (isUserLoggedIn) {
                    console.log("Using logged in username:", currentUsername);
                    // Xử lý khi đã có username
                } else {
                    // Đảm bảo form username được thiết lập trước khi hiển thị modal
                    setupUsernameForm();
                    
                    // Hiển thị modal chọn tên sau một khoảng thời gian ngắn
                    setTimeout(() => {
                        if (choiceNameModal) choiceNameModal.show();
                    }, 500);
                }
            }
            
            // Đảm bảo thứ tự khởi tạo đúng
            initializeModals();
            initializeUser();
            setupEventListeners();
        });      
    </script>
</body>
</html>