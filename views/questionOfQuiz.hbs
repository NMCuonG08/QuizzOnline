<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enhanced Quiz Questions</title>
    <link rel="stylesheet" href="/css/questionOfQuiz.css">
</head>
<body>
    <div class="container">
        <!-- Search Bar -->
        <div class="search-container">
            <div class="search-title">Search questions from Quizizz Library</div>
            <div class="search-box">
                <input type="text" class="search-input" placeholder="Enter topic name">
                <button class="search-button">
                    <span class="icon search-icon">üîç</span>
                    Search questions
                </button>
            </div>
        </div>
        
        <!-- Quiz Counter and Add Button -->
        <div class="quiz-header">
            <div class="quiz-counter">5 questions <span class="quiz-points">(6 points)</span></div>
            <button class="add-question-btn">
                <span class="icon plus-icon"></span>
                <a href="/admin/quizzes/1/addquestion" >Add question</a>
            </button>
        </div>
        
        <!-- Question 1: Multiple Choice -->
        <div class="question-card multiple-choice">
            <div class="question-header">
                <div class="question-header-left">
                    <div class="reorder-icon">
                        <span class="icon menu-icon"></span>
                    </div>
                    <div class="question-type">
                        <span class="icon check-icon"></span>
                        1. Multiple Choice
                    </div>
                    <div class="question-time">30 seconds</div>
                    <div class="question-points">1 point</div>
                </div>
                <div class="question-header-right">
                    <button class="ai-button">
                        <span class="icon ai-icon"></span>
                        AI
                    </button>
                    <button class="duplicate-button">
                        <span class="icon duplicate-icon"></span>
                    </button>
                    <button class="preview-button">
                        <span class="icon preview-icon"></span>
                    </button>
                    <button class="edit-button" onclick="openEditModal('multiple-choice')">
                        <span class="icon edit-icon"></span>
                        Edit
                    </button>
                    <button class="delete-button">
                        <span class="icon delete-icon"></span>
                    </button>
                </div>
            </div>
            <div class="question-content">
                <div class="question-text">What is the capital city of France?</div>
                <div class="answer-title">Answer choices</div>
                <div class="answer-options">
                    <div class="answer-column">
                        <div class="answer-option">
                            <span class="answer-incorrect cross-icon"></span>
                            London
                        </div>
                        <div class="answer-option">
                            <span class="answer-incorrect cross-icon"></span>
                            Berlin
                        </div>
                    </div>
                    <div class="answer-column">
                        <div class="answer-option">
                            <span class="answer-correct check-icon"></span>
                            Paris
                        </div>
                        <div class="answer-option">
                            <span class="answer-incorrect cross-icon"></span>
                            Rome
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Question 2: True/False -->
        <div class="question-card true-false">
            <div class="question-header">
                <div class="question-header-left">
                    <div class="reorder-icon">
                        <span class="icon menu-icon"></span>
                    </div>
                    <div class="question-type">
                        <span class="icon tf-icon"></span>
                        2. True/False
                    </div>
                    <div class="question-time">20 seconds</div>
                    <div class="question-points">1 point</div>
                </div>
                <div class="question-header-right">
                    <button class="ai-button">
                        <span class="icon ai-icon"></span>
                        AI
                    </button>
                    <button class="duplicate-button">
                        <span class="icon duplicate-icon"></span>
                    </button>
                    <button class="preview-button">
                        <span class="icon preview-icon"></span>
                    </button>
                    <button class="edit-button" onclick="openEditModal('true-false')">
                        <span class="icon edit-icon"></span>
                        Edit
                    </button>
                    <button class="delete-button">
                        <span class="icon delete-icon"></span>
                    </button>
                </div>
            </div>
            <div class="question-content">
                <div class="question-text">The Great Wall of China is visible from space with the naked eye.</div>
                <div class="answer-title">Answer choices</div>
                <div class="answer-options">
                    <div class="true-false-option">
                        <span class="answer-incorrect cross-icon"></span>
                        True
                    </div>
                    <div class="true-false-option">
                        <span class="answer-correct check-icon"></span>
                        False
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Question 3: Fill in the Blank -->
        <div class="question-card fill-blank">
            <div class="question-header">
                <div class="question-header-left">
                    <div class="reorder-icon">
                        <span class="icon menu-icon"></span>
                    </div>
                    <div class="question-type">
                        <span class="icon blank-icon"></span>
                        3. Fill in the Blank
                    </div>
                    <div class="question-time">45 seconds</div>
                    <div class="question-points">2 points</div>
                </div>
                <div class="question-header-right">
                    <button class="ai-button">
                        <span class="icon ai-icon"></span>
                        AI
                    </button>
                    <button class="duplicate-button">
                        <span class="icon duplicate-icon"></span>
                    </button>
                    <button class="preview-button">
                        <span class="icon preview-icon"></span>
                    </button>
                    <button class="edit-button" onclick="openEditModal('fill-blank')">
                        <span class="icon edit-icon"></span>
                        Edit
                    </button>
                    <button class="delete-button">
                        <span class="icon delete-icon"></span>
                    </button>
                </div>
            </div>
            <div class="question-content">
                <div class="question-text">Water changes from liquid to gas at its <span class="fill-blank-answer">boiling point</span>, which is 100¬∞C at sea level.</div>
                <div class="answer-title">Correct Answer</div>
                <div class="answer-options">
                    <div class="answer-option">
                        <span class="answer-correct check-icon"></span>
                        boiling point
                    </div>
                </div>
                <div class="answer-title">Also accept</div>
                <div class="answer-options">
                    <div class="answer-column">
                        <div class="answer-option">
                            <span class="answer-correct check-icon"></span>
                            boiling
                        </div>
                    </div>
                    <div class="answer-column">
                        <div class="answer-option">
                            <span class="answer-correct check-icon"></span>
                            vaporization point
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Question 4: Matching -->
        <div class="question-card matching">
            <div class="question-header">
                <div class="question-header-left">
                    <div class="reorder-icon">
                        <span class="icon menu-icon"></span>
                    </div>
                    <div class="question-type">
                        <span class="icon match-icon"></span>
                        4. Matching
                    </div>
                    <div class="question-time">60 seconds</div>
                    <div class="question-points">1 point</div>
                </div>
                <div class="question-header-right">
                    <button class="ai-button">
                        <span class="icon ai-icon"></span>
                        AI
                    </button>
                    <button class="duplicate-button">
                        <span class="icon duplicate-icon"></span>
                    </button>
                    <button class="preview-button">
                        <span class="icon preview-icon"></span>
                    </button>
                    <button class="edit-button" onclick="openEditModal('matching')">
                        <span class="icon edit-icon"></span>
                        Edit
                    </button>
                    <button class="delete-button">
                        <span class="icon delete-icon"></span>
                    </button>
                </div>
            </div>
            <div class="question-content">
                <div class="question-text">Match each element with its chemical symbol:</div>
                <div class="answer-title">Match items correctly</div>
                <div class="matching-container">
                    <div class="matching-column">
                        <div class="matching-item">Oxygen</div>
                        <div class="matching-item">Carbon</div>
                        <div class="matching-item">Hydrogen</div>
                        <div class="matching-item">Gold</div>
                    </div>
                    <div class="matching-column">
                        <div class="matching-item">O <span class="matching-connector">‚Üê</span> Oxygen</div>
                        <div class="matching-item">C <span class="matching-connector">‚Üê</span> Carbon</div>
                        <div class="matching-item">H <span class="matching-connector">‚Üê</span> Hydrogen</div>
                        <div class="matching-item">Au <span class="matching-connector">‚Üê</span> Gold</div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Question 5: Open-ended -->
        <div class="question-card open-ended">
            <div class="question-header">
                <div class="question-header-left">
                    <div class="reorder-icon">
                        <span class="icon menu-icon"></span>
                    </div>
                    <div class="question-type">
                        <span class="icon text-icon"></span>
                        5. Open-ended
                    </div>
                    <div class="question-time">90 seconds</div>
                    <div class="question-points">1 point</div>
                </div>
                <div class="question-header-right">
                    <button class="ai-button">
                        <span class="icon ai-icon"></span>
                        AI
                    </button>
                    <button class="duplicate-button">
                        <span class="icon duplicate-icon"></span>
                    </button>
                    <button class="preview-button">
                        <span class="icon preview-icon"></span>
                    </button>
                    <button class="edit-button" onclick="openEditModal('open-ended')">
                        <span class="icon edit-icon"></span>
                        Edit
                    </button>
                    <button class="delete-button">
                        <span class="icon delete-icon"></span>
                    </button>
                </div>
            </div>
            <div class="question-content">
                <div class="question-text">Explain the importance of photosynthesis for life on Earth in 2-3 sentences.</div>
                <div class="answer-title">Example answer</div>
                <div class="open-ended-answer">
                    Photosynthesis is the process by which plants convert sunlight into energy, producing oxygen as a byproduct. This process is crucial for life on Earth as it provides the oxygen we breathe and forms the foundation of most food chains by converting solar energy into chemical energy that animals can consume.
                </div>
            </div>
        </div>
    </div>
    
    <!-- Edit Modal -->
    <div class="modal-overlay" id="editModal">
        <div class="modal">
            <div class="modal-header">
                <div class="modal-title">Edit Question</div>
                <button class="modal-close" onclick="closeModal()">&times;</button>
            </div>
            <div class="modal-body">
                <div class="modal-tab-header">
                    <div class="modal-tab active" onclick="openTab('question')">Question</div>
                    <div class="modal-tab" onclick="openTab('answers')">Answers</div>
                    <div class="modal-tab" onclick="openTab('settings')">Settings</div>
                </div>
                
                <!-- Question Tab -->
                <div class="modal-content active" id="questionTab">
                    <div class="form-group">
                        <label class="form-label">Question Type</label>
                        <select class="form-select" id="questionType">
                            <option value="multiple-choice">Multiple Choice</option>
                            <option value="true-false">True/False</option>
                            <option value="fill-blank">Fill in the Blank</option>
                            <option value="matching">Matching</option>
                            <option value="open-ended">Open-ended</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Question</label>
                        <textarea class="form-textarea" id="questionText" placeholder="Enter your question here"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Add Media (Optional)</label>
                        <button class="btn btn-secondary">
                            <span class="icon">üì∑</span>
                            Upload Image
                        </button>
                    </div>
                </div>
                
                <!-- Answers Tab -->
                <div class="modal-content" id="answersTab">
                    <!-- Multiple Choice Answers -->
                    <div id="multipleChoiceAnswers">
                        <div class="answer-editor">
                            <div class="answer-editor-header">
                                <div class="answer-status">
                                    <span class="answer-correct check-icon"></span>
                                    Correct Answer
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-input" placeholder="Enter answer text">
                            </div>
                        </div>
                        
                        <div class="answer-editor">
                            <div class="answer-editor-header">
                                <div class="answer-status">
                                    <span class="answer-incorrect cross-icon"></span>
                                    Incorrect Answer
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-input" placeholder="Enter answer text">
                            </div>
                        </div>
                        
                        <div class="answer-editor">
                            <div class="answer-editor-header">
                                <div class="answer-status">
                                    <span class="answer-incorrect cross-icon"></span>
                                    Incorrect Answer
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-input" placeholder="Enter answer text">
                            </div>
                        </div>
                        
                        <div class="answer-editor">
                            <div class="answer-editor-header">
                                <div class="answer-status">
                                    <span class="answer-incorrect cross-icon"></span>
                                    Incorrect Answer
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-input" placeholder="Enter answer text">
                            </div>
                        </div>
                        
                        <button class="btn-add-answer">
                            <span class="icon plus-icon"></span>
                            Add Another Answer
                        </button>
                    </div>
                    
                    <!-- Open Ended Example Answer -->
                    <div id="openEndedAnswer" style="display: none;">
                        <div class="form-group">
                            <label class="form-label">Example Answer (Optional)</label>
                            <textarea class="form-textarea" placeholder="Enter an example of an acceptable answer"></textarea>
                        </div>
                    </div>
                </div>
                
                <!-- Settings Tab -->
                <div class="modal-content" id="settingsTab">
                    <div class="time-points-group">
                        <div class="form-group">
                            <label class="form-label">Time Limit</label>
                            <select class="form-select">
                                <option>10 seconds</option>
                                <option>20 seconds</option>
                                <option>30 seconds</option>
                                <option selected>45 seconds</option>
                                <option>60 seconds</option>
                                <option>90 seconds</option>
                                <option>120 seconds</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Points</label>
                            <select class="form-select">
                                <option>1 point</option>
                                <option selected>2 points</option>
                                <option>3 points</option>
                                <option>5 points</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="switch-group">
                        <div>Randomize answer options</div>
                        <label class="switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <div class="switch-group">
                        <div>Show explanation after answering</div>
                        <label class="switch">
                            <input type="checkbox">
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <div class="switch-group">
                        <div>Allow partial credit</div>
                        <label class="switch">
                            <input type="checkbox">
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                <button class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
    
    <script>
        // Functions to handle the modal
        function openEditModal(questionType) {
            const modal = document.getElementById('editModal');
            modal.classList.add('active');
            
            // Pre-fill form based on question type
            document.getElementById('questionType').value = questionType;
            
            // Show/hide appropriate answer section
            if (questionType === 'open-ended') {
                document.getElementById('multipleChoiceAnswers').style.display = 'none';
                document.getElementById('openEndedAnswer').style.display = 'block';
                document.getElementById('questionText').value = 'Explain the importance of photosynthesis for life on Earth in 2-3 sentences.';
            } else {
                document.getElementById('multipleChoiceAnswers').style.display = 'block';
                document.getElementById('openEndedAnswer').style.display = 'none';
                
                if (questionType === 'multiple-choice') {
                    document.getElementById('questionText').value = 'What is the capital city of France?';
                } else if (questionType === 'true-false') {
                    document.getElementById('questionText').value = 'The Great Wall of China is visible from space with the naked eye.';
                } else if (questionType === 'fill-blank') {
                    document.getElementById('questionText').value = 'Water changes from liquid to gas at its ___ point, which is 100¬∞C at sea level.';
                } else if (questionType === 'matching') {
                    document.getElementById('questionText').value = 'Match each element with its chemical symbol:';
                }
            }
        }
        
        function closeModal() {
            const modal = document.getElementById('editModal');
            modal.classList.remove('active');
        }
        
        function openTab(tabName) {
            // Hide all tabs
            const tabContents = document.querySelectorAll('.modal-content');
            tabContents.forEach(tab => tab.classList.remove('active'));
            
            // Remove active class from all tab headers
            const tabHeaders = document.querySelectorAll('.modal-tab');
            tabHeaders.forEach(tab => tab.classList.remove('active'));
            
            // Show the selected tab
            document.getElementById(tabName + 'Tab').classList.add('active');
            
            // Highlight the clicked tab header
            event.target.classList.add('active');
        }
        
        // Close modal if clicking outside
        window.addEventListener('click', function(event) {
            const modal = document.getElementById('editModal');
            if (event.target === modal) {
                closeModal();
            }
        });
    </script>
</body>
</html>