<style>
  html, body {
    overflow: auto !important;
    height: 100%;
    margin: 0;
  }

  .loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 9999;
    display: none;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .loading-overlay.active {
    display: flex;
    opacity: 1;
  }

  .spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid #3498db;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
</style>

<div id="loading-overlay" class="loading-overlay">
  <div class="spinner"></div>
</div>

<script>
  // Chỉ hiển thị loading khi navigation hoàn tất
  window.addEventListener('DOMContentLoaded', () => {
    const overlay = document.getElementById('loading-overlay');
    
    // Hiển thị loading ngay khi bắt đầu tải trang
    overlay.classList.add('active');
    
    // Ẩn loading ngay khi UI đã render (DOMContentLoaded hoàn tất)
    overlay.classList.remove('active');
    
    // Đảm bảo ẩn loading khi toàn bộ tài nguyên (hình ảnh, script, etc.) tải xong
    window.addEventListener('load', () => {
      overlay.classList.remove('active');
    });
  });
</script>